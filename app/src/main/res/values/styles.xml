<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowBackground">@drawable/notes_logo</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/background</item>
    </style>


    <style name="AuthenticationButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:textSize">@dimen/text_size_meduim</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextView">

        <item name="android:maxLines">1</item>
        <item name="android:imeActionLabel">@string/action_sign_up</item>
    </style>
</resources>
